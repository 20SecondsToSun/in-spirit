<languageVersion: 1.0;>
kernel EdgeDiff
<
	namespace: "ru.inspirit";
	vendor: "Eugene Zatepyakin";
	version: 1;
	description: "Your Description";
>
{
	input image3 src;
	output pixel3 trg;
	
    parameter float weight1
    <
        minValue: float( -1.0 );
        maxValue: float( 1.0 );
        defaultValue: float( 0.0 );
    >;
    parameter float weight2
    <
        minValue: float( -1.0 );
        maxValue: float( 1.0 );
        defaultValue: float( 0.0 );
    >;
    parameter float weight3
    <
        minValue: float( -1.0 );
        maxValue: float( 1.0 );
        defaultValue: float( 0.0 );
    >;
    parameter float weight4
    <
        minValue: float( -1.0 );
        maxValue: float( 1.0 );
        defaultValue: float( 0.0 );
    >;
    parameter float weight5
    <
        minValue: float( -1.0 );
        maxValue: float( 1.0 );
        defaultValue: float( 0.0 );
    >;
    parameter float weight6
    <
        minValue: float( -1.0 );
        maxValue: float( 1.0 );
        defaultValue: float( 0.0 );
    >;

	void evaluatePixel()
	{		
		float accx = float(0.0);
		float accy = float(0.0);
		float2 pos = outCoord();
		
		// X DIRECTION
		accx += weight1 * (sampleNearest(src, pos + float2( -1.0, 0.0 )).y - sampleNearest(src, pos + float2( 1.0, 0.0 )).y);
		
		// Y DIRECTION
		accy += weight1 * (sampleNearest(src, pos + float2( 0.0, -1.0 )).x - sampleNearest(src, pos + float2( 0.0, 1.0 )).x);
		
		// X DIRECTION
		accx +=  weight2 * (sampleNearest(src, pos + float2( -2.0, 0.0 )).y - sampleNearest(src, pos + float2( 2.0, 0.0 )).y);
		
		// Y DIRECTION
		accy += weight2 * (sampleNearest(src, pos + float2( 0.0, -2.0 )).x - sampleNearest(src, pos + float2( 0.0, 2.0 )).x);
		
		// X DIRECTION
		accx += weight3 * (sampleNearest(src, pos + float2( -3.0, 0.0 )).y - sampleNearest(src, pos + float2( 3.0, 0.0 )).y);
		
		// Y DIRECTION
		accy += weight3 * (sampleNearest(src, pos + float2( 0.0, -3.0 )).x - sampleNearest(src, pos + float2( 0.0, 3.0 )).x);
		
		// X DIRECTION
		accx +=  weight4 * (sampleNearest(src, pos + float2( -4.0, 0.0 )).y - sampleNearest(src, pos + float2( 4.0, 0.0 )).y);
		
		// Y DIRECTION
		accy += weight4 * (sampleNearest(src, pos + float2( 0.0, -4.0 )).x - sampleNearest(src, pos + float2( 0.0, 4.0 )).x);
		
		// X DIRECTION
		accx +=  weight5 * (sampleNearest(src, pos + float2( -5.0, 0.0 )).y - sampleNearest(src, pos + float2( 5.0, 0.0 )).y);
		
		// Y DIRECTION
		accy += weight5 * (sampleNearest(src, pos + float2( 0.0, -5.0 )).x - sampleNearest(src, pos + float2( 0.0, 5.0 )).x);
		
		// X DIRECTION
		accx +=  weight6 * (sampleNearest(src, pos + float2( -6.0, 0.0 )).y - sampleNearest(src, pos + float2( 6.0, 0.0 )).y);
		
		// Y DIRECTION
		accy += weight6 * (sampleNearest(src, pos + float2( 0.0, -6.0 )).x - sampleNearest(src, pos + float2( 0.0, 6.0 )).x);
		
		trg = float3(accx, accy, 0.0);
	}
}
