<languageVersion: 1.0;>
kernel GrayScale
<
	namespace: "ru.inspirit";
	vendor: "Eugene Zatepyakin";
	version: 1;
	description: "Your Description";
>
{
	input image4 src;
	output pixel3 trg;

	void evaluatePixel()
	{
		pixel4 p = sampleNearest(src, outCoord());
		float luma = 0.299 * p.r + 0.587 * p.g + 0.114 * p.b;
		trg = float3(luma, 0.0, 0.0);
	}
}
